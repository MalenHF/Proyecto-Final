@model Proyecto_Final.Models.DTO.EventoCreateDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Evento</h4>
<hr />
<div class="row">

    <div class="col-md-6 card mx-auto">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group text-center my-2">
                <label asp-for="TituloEvento" class="control-label">Titulo</label>
                <input asp-for="TituloEvento" class="form-control" />
                <span asp-validation-for="TituloEvento" class="text-danger"></span>
            </div>
            <div class="form-group text-center mb-2">
                <label asp-for="ContenidoEvento" class="control-label">Contenido del Evento</label>
                <textarea asp-for="ContenidoEvento" class="form-control" rows="10"></textarea>
                <span asp-validation-for="ContenidoEvento" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <label asp-for="Foto" class="control-label">Foto URL</label>
                <input asp-for="Foto" class="form-control" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group card card-footer mb-2">
                <input type="submit" value="Crear" class="btn btn-primary mb-1 col-6 mx-auto" />                
                <a class="btn btn-danger col-6  mx-auto" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>    
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


