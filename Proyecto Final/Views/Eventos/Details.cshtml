@model Proyecto_Final.Models.dbModels.Evento

@{
    ViewData["Title"] = "Details";
}

<div class=" card card-body container col p-0 ">
    <img src="~/img/banertest2.png" class="img-fluid banerEstilo" alt="...">
</div>
<div class="container">
    <div class="row p-0">
        <div class="card col-lg-6 col-xl-6 d-flex container p-1 m-0 imgBorde2">
            <a class="btn txtColor" role="button" asp-controller="Noticias" asp-action="IndexUser">
                <h4>Noticias</h4>
            </a>
        </div>
        <div class="card col-lg-6 col-xl-6 d-flex container p-1 m-0 imgBorde3">
            <a class="btn txtColor" role="button" asp-controller="Eventos" asp-action="IndexUser">
                <h4 class="text-white">Eventos</h4>
            </a>
        </div>
        <div class="card card-body conteBorde text-white p-0">
            <h3 class="text-center mt-2">
                @Html.DisplayFor(model => model.TituloEvento)
            </h3>

            <div class="card col-8 mx-auto">
                <img class="imgEfecto" src="./img/hfLobby.png" alt="">
            </div>


            <p class="m-2">
                @Html.DisplayFor(model => model.ContenidoEvento)
            </p>
            <div class="card-footer text-end border-white">
                @Html.DisplayFor(model => model.FechaEvento)
            </div>
        </div>
    </div>
</div>
<div class="container text-center my-2 text-white">
    <a class="btn btn-dark" asp-action="IndexUser">Volver a la Eventos</a>
</div>
<partial name="_AdminEventoButtons" />
<div class=" card card-body container col p-0 ">
    <img src="~/img/banertest2.png" class="img-fluid banerEstilo" alt="...">
</div>
