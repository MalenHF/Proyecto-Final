@model IEnumerable<Proyecto_Final.Models.dbModels.Noticia>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Panel de Noticias</h1>

<p class="text-center">
    <a class="btn btn-primary" asp-action="Create">Crear Noticias</a>
</p>
<div class="card col-6 mx-auto">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Noticias Del Servidor
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a class="h5 mb-0" asp-action="Details" asp-route-id="@item.IdNoticia">@Html.DisplayFor(modelItem => item.TituloNoticia)</a>

                        @Html.DisplayFor(modelItem => item.NoticiaStatus)

                        <p class="fs-6 text-muted mb-0">@Html.DisplayFor(modelItem => item.FechaNoticia)</p>
                    </td>
                    <td class="text-center col">
                        <a asp-action="Edit" asp-route-id="@item.IdNoticia">Edición</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdNoticia" class="text-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<table class="table bg-white mt-3">
    <thead>
        <tr>
            <th class="text-center">
                Estatus
            </th>
            <th>
               Titulo
            </th>
            <th>
                Contenido
            </th>            
            <th>
                Fecha
            </th>
            <th>
                Foto URL
            </th>
            <th>
                Creador
            </th>
            <th>
                Edición
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.NoticiaStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TituloNoticia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContenidoNoticia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNoticia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Id) | @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Nombre)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdNoticia">Vista</a> |
                <a asp-action="Edit" asp-route-id="@item.IdNoticia">Edición</a> |
                <a asp-action="Delete" asp-route-id="@item.IdNoticia" class="text-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
