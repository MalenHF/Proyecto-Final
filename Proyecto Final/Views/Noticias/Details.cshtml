@model Proyecto_Final.Models.dbModels.Noticia

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Noticias</h4>
    <hr />
    <div class="card container mx-auto p-0">
        <div class="card-header">
            <div class="row mx-1 ">
                Noticia: <h4 class="col mb-0">@Html.DisplayNameFor(model => model.TituloNoticia) </h4>
                <span class="col mb-0">@Html.DisplayFor(model => model.NoticiaStatus)</span>
                <span class="text-end col mb-0">@Html.DisplayFor(model => model.FechaNoticia) </span>
            </div>

        </div>
        <div class="card-body">
            @Html.DisplayFor(model => model.ContenidoNoticia)
        </div>
    </div>

    <div class="text-end ">
        <a asp-action="Edit" asp-route-id="@Model?.IdNoticia">Editar</a> |
        <a asp-action="Index">Volver a la lista</a>
    </div>

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TituloNoticia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TituloNoticia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContenidoNoticia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContenidoNoticia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NoticiaStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoticiaStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaNoticia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaNoticia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Foto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUsuarioNavigation.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdNoticia">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
