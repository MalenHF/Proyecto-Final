@model Proyecto_Final.Models.dbModels.Noticia

@{
    ViewData["Title"] = "Details";
}

<div class=" card card-body container col p-0 ">
    <img src="~/img/banertest2.jpg" class="img-fluid banerEstilo" alt="...">
</div>
<div class="container">
    <div class="row p-0">
        <div class="card col-lg-6 col-xl-6 d-flex container p-1 m-0 imgBorde2">
            <a class="btn txtColor" role="button" asp-controller="Noticias" asp-action="IndexUser">
                <h4>Noticias</h4>
            </a>
        </div>
        <div class="card col-lg-6 col-xl-6 d-flex container p-1 m-0 imgBorde2">
            <a class="btn txtColor" role="button" asp-controller="Eventos" asp-action="IndexUser">
                <h4>Eventos</h4>
            </a>
        </div>
        <div class="card card-body conteBorde text-white p-0">
            <h3 class="text-center mt-2">
                @Html.DisplayFor(model => model.TituloNoticia)
            </h3>
            
                <div class="card col-8 mx-auto">
                    <img class="imgEfecto" src="./img/hfLobby.png" alt="">
                </div>
            <p class="m-2">
                @Html.DisplayFor(model => model.ContenidoNoticia)
            </p>
            <div class="card-footer text-end">
                @Html.DisplayFor(model => model.FechaNoticia)
            </div>
        </div>
    </div>
</div>
<div class="container text-center my-2 text-white">    
    <a class="btn btn-dark" asp-action="IndexUser">Volver a la Noticias</a>
</div>
<partial name="_AdminNoticeButtons" />
<div class=" card card-body container col p-0 ">
    <img src="~/img/banertest2.jpg" class="img-fluid banerEstilo" alt="...">
</div>

