@using Microsoft.AspNetCore.Identity
@inject SignInManager<AplicationUser> SignInManager
@inject UserManager<AplicationUser> UserManager


@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{

    <div class="container text-center my-2 text-white">
        <a class="btn btn-primary" asp-controller="Publicaciones" asp-action="Edit" asp-route-id="@Model?.PublicacionId">Editar</a> |
        <a class="btn btn-danger" asp-controller="Publicaciones" asp-action="Index">Panel de Eventos</a>
    </div>
}


