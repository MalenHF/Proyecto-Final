<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto_Final</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto_Final.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/inico.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
          integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Proyecto_Final</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Noticias" asp-action="Index">Not</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Eventos" asp-action="Index">Evt</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow m-0 p-2 ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img src="~/img/hfLogo.png" alt="" height="62" width="65" class="rounded-circle"></a>
               
                <a class="navbar-brand mx-auto" asp-area="" asp-controller="Home" asp-action="Index">
                    <b class="h2">Hooligan Force</b>
                </a>
                <partial name="_LoginPartial" />
            </div>

        </nav>
        <div class="navbar-collapse p-0 m-0" id="navbarSupportedContent">
            <ul class="navbar d-flex estiloNav p-0 mb-0 col-auto">

                <oi class="nav-item text-center m-0 ms-auto me-auto mb-auto">
                    <a class="nav-link" aria-current="page" asp-controller="EventosYNoticias" asp-action="Index">
                        <div>
                            <i class="text-center fa-solid fa-newspaper "></i>
                        </div>
                        Noticias y Eventos
                    </a>
                </oi>

                <ol class="nav-item text-center ms-auto me-auto mb-auto">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Informacion">
                        <div>
                            <i class="fa-solid fa-circle-info"></i>
                        </div>
                        Informacion
                    </a>
                </ol>

                <ol class="nav-item text-center ms-auto me-auto mb-auto">
                    <a class="nav-link" aria-disabled="true" asp-controller="Publicaciones" asp-action="Index">
                        <div>
                            <i class="fa-regular fa-image"></i>
                        </div>
                        Galeria
                    </a>
                </ol>
                <ol class="nav-item text-center ms-auto me-auto mb-auto">
                    <a class="nav-link" aria-disabled="true" asp-controller="Votaciones" asp-action="Index">
                        <div>
                            <i class="fa-solid fa-check-to-slot"></i>
                        </div>
                        Votacion
                    </a>
                </ol>
            </ul>
           
        </div>
    </header>

    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Proyecto_Final - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
